#!/bin/bash

# Path to sshd_config
SSHD_CONFIG="/etc/ssh/sshd_config"

# Function to apply changes and document them
apply_and_document_change() {
  local setting="$1"
  local new_value="$2"

  # Check if the setting already has the correct value
  if grep -q "^$setting $new_value" "$SSHD_CONFIG"; then
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to check current value of $setting"
      exit 1
    fi
    echo "ğŸ”„ $setting is already set to $new_value. Skipping..."
    return
  fi

  # Check if the setting exists and what its current value is
  if grep -q "^$setting" "$SSHD_CONFIG"; then
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to check current value of $setting"
      exit 1
    fi
    current_value=$(grep "^$setting" "$SSHD_CONFIG")
    sed -i "s/^$current_value$/$current_value > $setting $new_value/" "$SSHD_CONFIG"
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to update $setting to $new_value"
      exit 1
    fi
  elif grep -q "^#$setting" "$SSHD_CONFIG"; then
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to check current value of $setting"
      exit 1
    fi
    current_value=$(grep "^#$setting" "$SSHD_CONFIG")
    sed -i "s/^$current_value$/$current_value > $setting $new_value/" "$SSHD_CONFIG"
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to update $setting to $new_value"
      exit 1
    fi
  else
    echo "# $setting > $setting $new_value" >> "$SSHD_CONFIG"
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to add $setting $new_value"
      exit 1
    fi
  fi

  # Double check the change
  if ! grep -q "^#*$setting.*> $setting $new_value" "$SSHD_CONFIG"; then
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to verify the change for $setting"
      exit 1
    fi
    echo "âŒ Failed to apply $setting $new_value"
    exit 1
  else
    echo "âœ… Applied $setting $new_value"
  fi
}

# Backup the original sshd_config file
echo "ğŸ“‚ Backing up the original sshd_config file..."
cp "$SSHD_CONFIG" "$SSHD_CONFIG.bak"
if [ $? -eq 0 ]; then
  echo "âœ… Backup successful: $SSHD_CONFIG.bak"
else
  echo "âŒ Backup failed"
  exit 1
fi
sleep 1

# Disable Root Login with Password
echo "ğŸ”§ Disabling root login with password..."
apply_and_document_change "PermitRootLogin" "prohibit-password"
sleep 1

# Ensure Password Authentication is Disabled
echo "ğŸ”§ Ensuring password authentication is disabled..."
apply_and_document_change "PasswordAuthentication" "no"
sleep 1

# Ensure Pubkey Authentication is Enabled (No change needed for commented line)
echo "ğŸ”§ Ensuring public key authentication is enabled..."
if ! grep -q "^PubkeyAuthentication yes" "$SSHD_CONFIG"; then
  if [ $? -ne 0 ]; then
    echo "âŒ Failed to check current value of PubkeyAuthentication"
    exit 1
  fi
  apply_and_document_change "PubkeyAuthentication" "yes"
fi
sleep 1

# Restart SSH service
echo "ğŸ”„ Restarting SSH service..."
if systemctl restart sshd; then
  echo "âœ… SSH service restarted successfully"
else
  echo "âŒ Failed to restart SSH service"
  exit 1
fi
sleep 1

# Verify settings
verify_setting() {
  local setting="$1"
  local expected_value="$2"

  if ! grep -q "^#*$setting.*> $setting $expected_value" "$SSHD_CONFIG"; then
    if [ $? -ne 0 ]; then
      echo "âŒ Failed to verify the setting for $setting"
      exit 1
    fi
    echo "âŒ $setting is not set to $expected_value as expected"
    exit 1
  else
    echo "âœ… $setting is correctly set to $expected_value"
  fi
}

echo "ğŸ” Verifying settings..."
verify_setting "PermitRootLogin" "prohibit-password"
sleep 1
verify_setting "PasswordAuthentication" "no"
sleep 1
verify_setting "PubkeyAuthentication" "yes"
sleep 1

echo "ğŸ‰ All settings are applied and verified successfully"
